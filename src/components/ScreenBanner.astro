---
const { title, btnId, btnTitle, url } = Astro.props;
import { Image } from "astro:assets";
import flyer from "../assets/images/women-discount.png";
---

<astro-banner btnId={btnId}>
  <div
    class="fixed bottom-0 start-1/2 z-50 mx-auto w-full -translate-x-1/2 transform sm:max-w-md top-24 -translate-y-10"
    role="region"
    aria-label="Informational Banner"
  >
    <div
      class="rounded-xl bg-neutral-200/90 bg-cover bg-center bg-no-repeat p-4 text-center shadow-sm"
    >
      <div class="flex items-center justify-center flex-col lg:flex-row">
        <button
          type="button"
          class="ml-auto order-1 lg:order-4 inline-flex items-center gap-x-2 rounded-full border border-transparent bg-red-500 p-2 text-sm font-semibold text-white hover:bg-medium-blue duration-200 disabled:pointer-events-none disabled:opacity-50"
          id={btnId}
        >
          <span class="sr-only">Dismiss</span>
          <svg
            class="size-5 flex-shrink-0"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path d="M18 6 6 18"></path><path d="m6 6 12 12"></path></svg
          >
        </button>

        <div class="lg:ml-auto order-3 flex gap-3">
          {
            title && (
              <p class="me-2 inline-block font-medium text-neutral-50 dark:text-neutral-700">
                {title}
              </p>
            )
          }
        </div>
      </div>
      <Image
        id="flyer1"
        src={flyer}
        alt="Ground School training starting soon"
        class="w-full h-full object-cover mt-2 rounded-lg"
      />
      <a
        class="btn-primary group inline-flex mx-auto mt-2 items-center gap-x-2 rounded w-full justify-center text-xl border-2 border-dark-blue bg-mustard-yellow backdrop-brightness-75 sm:backdrop-brightness-100 px-3 py-5 font-semibold text-dark-blue transition duration-300 hover:text-white hover:bg-dark-blue disabled:pointer-events-none disabled:opacity-50"
        href="https://hightideaviation.com/intro-flight/"
        target="_blank"
      >
        {btnTitle}
        <svg
          class="size-4 flex-shrink-0 transition duration-100 group-hover:translate-x-1"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"><path d="m9 18 6-6-6-6"></path></svg
        >
      </a>
    </div>
  </div>
</astro-banner>
<script type="module">
  class AstroBanner extends HTMLElement {
    connectedCallback() {
      const btnId = this.getAttribute("btnId");
      const button = this.querySelector(`#${btnId}`);
      if (button != null) {
        button.addEventListener("click", () => this.remove());
      }
    }
  }

  customElements.define("astro-banner", AstroBanner);
</script>
