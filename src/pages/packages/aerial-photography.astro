---
import SimpleHero from "~/components/widgets/SimpleHero.astro";
import Layout from "~/layouts/PageLayout.astro";
import { Image } from "astro:assets";
import Intro from "~/assets/images/yacht-basin-southport-nc.jpg";
import { Icon } from "astro-icon/components";

import BrokerageServices from "~/components/BrokerageServices";
import ManagementServices from "~/components/ManagementServices";
import Features2 from "~/components/widgets/Features2.astro";
import Note from "~/components/widgets/Note.astro";

const metadata = {
  title: "Aerial Photography  || High Tide Aviation",
};
---

<Layout metadata={metadata}>
  <!-- SimpleHero Widget ******************* -->

  <SimpleHero
    title="Capture the View"
    subtitle="Aerial Photography and Videography"
    image={{
      src: "~/assets/images/cape-fear-north-carolina.jpg",
      alt: "cape-fear-north-carolina",
    }}
  />

  <section class="py-24 px-5">
    <div
      class="max-w-xl gap-10 lg:max-w-7xl mx-auto flex flex-col lg:flex-row items-center lg:gap-20"
    >
      <div class="lg:flex-1 flex justify-center">
        <div class="lg:w-[28rem] lg:h-[33rem]">
          <Image
            class="object-cover h-full"
            src={Intro}
            sizes={"(max-width: 768px) 100vw, 50vw"}
            alt="yacht-basin-southport-nc"
          />
        </div>
      </div>
      <div class="flex flex-col lg:flex-1">
        <h2
          class="uppercase text-slate-800 dark:text-slate-200 font-bold tracking-widest"
        >
          Elevate Your Vision
        </h2>
        <h3
          class="text-5xl text-slate-700 dark:text-slate-300 font-bold leading-tight"
        >
          Tell Your Story From Above
        </h3>
        <p class="text-gray-700 dark:text-gray-300 leading-relaxed my-5">
          High Tide Aviation elevates your projects with professional aerial
          photography and videography services across Southport and St Simons
          Island. From real estate to construction and promotional content, our
          expert pilots and state-of-the-art aircraft provide superior aerial
          views that captivate and inform.
        </p>
        <div class="flex gap-7 flex-col md:flex-row">
          <a
            href="#brokerageServices"
            class="bg-sky-300 dark:bg-slate-700 rounded py-2 px-5 flex gap-5 items-center group hover:bg-slate-800 hover:dark:bg-sky-200 duration-500"
          >
            <Icon
              class="size-28 text-slate-900 dark:text-sky-100 group-hover:text-sky-300 group-hover:dark:text-sky-700 duration-500"
              name="tabler:camera"
            />
            <div>
              <p
                class="text-slate-900 dark:text-gray-100 font-bold text-xl leading-tight group-hover:text-white group-hover:dark:text-sky-900 duration-500"
              >
                Aerial Photography
              </p>
              <p
                class="text-sm group-hover:text-gray-200 font-semibold leading-tight"
              >
                Capture still images of the coast
              </p>
            </div>
          </a>
          <a
            href="#managementServices"
            class="bg-sky-300 dark:bg-slate-700 rounded py-2 px-5 flex gap-5 items-center group hover:bg-slate-800 hover:dark:bg-sky-200 duration-500"
          >
            <Icon
              class="size-28 text-slate-900 dark:text-sky-100 group-hover:text-sky-300 group-hover:dark:text-sky-700 duration-500"
              name="tabler:movie"
            />
            <div>
              <p
                class="text-slate-900 dark:text-gray-100 font-bold text-xl leading-tight group-hover:text-white group-hover:dark:text-sky-900 duration-500"
              >
                Aerial Videography
              </p>
              <p
                class="text-sm group-hover:text-gray-200 font-semibold leading-tight"
              >
                Create videos of your flight views
              </p>
            </div>
          </a>
        </div>
        <div class="flex flex-col sm:flex-row items-center gap-5 mt-5">
          <a href="/contact" class="btn-primary"> Contact High Tide </a>
        </div>
      </div>
    </div>
  </section>

  <section
    id="brokerageServices"
    class="py-24 px-5 bg-slate-500/10 scroll-my-20"
  >
    <div
      class="max-w-xl gap-10 lg:max-w-7xl mx-auto flex flex-col lg:flex-row items-center lg:gap-20"
    >
      <div class="flex flex-col lg:flex-1">
        <h2
          class="uppercase text-slate-800 dark:text-slate-200 font-bold tracking-widest"
        >
          Aerial Photography
        </h2>
        <h3 class="text-5xl text-slate-600 font-black leading-tight">
          Capture the Coast from Above
        </h3>
        <p class="text-gray-700 dark:text-gray-300 leading-relaxed my-5">
          Elevate your visual content with stunning aerial photography that
          highlights the beauty and breadth of St Simons Island and Southport.
          Our high-resolution images are perfect for real estate, construction
          monitoring, and environmental studies.
        </p>
        <a href="/contact" class="btn-primary"> Book Photography Now </a>
      </div>

      <div class="flex-1 w-full overflow-hidden">
        <BrokerageServices client:visible />
      </div>
    </div>
  </section>

  <section id="managementServices" class="py-24 px-5 scroll-my-20">
    <div
      class="max-w-xl gap-10 lg:max-w-7xl mx-auto flex flex-col lg:flex-row-reverse items-center lg:gap-20"
    >
      <div class="flex flex-col lg:flex-1">
        <h2
          class="uppercase text-slate-800 dark:text-slate-200 font-bold tracking-widest"
        >
          Aerial Videography
        </h2>
        <h3 class="text-5xl text-slate-600 font-black leading-tight">
          Professionally Film the Coastline
        </h3>
        <p class="text-gray-700 dark:text-gray-300 leading-relaxed my-5">
          Transform your storytelling with aerial videography that provides
          cinematic quality footage of St Simons Island and Southport. Our video
          services are ideal for promotional videos, documentary filmmaking, and
          construction project monitoring.
        </p>
        <a href="/contact" class="btn-primary"> Book Videography Now </a>
      </div>

      <div class="flex-1 w-full overflow-hidden">
        <ManagementServices client:visible />
      </div>
    </div>
  </section>

  <Note
    description="Aerial Footage services are only available at our Southport and St Simons Island locations."
  />
  <!-- Features2 Widget ************** -->

  <Features2
    id="locations"
    title="Add Aerial Footage to Your Tour"
    tagline=" Tour Add-ons"
    columns={2}
    bg='<div class="absolute inset-0 bg-gradient-to-t from-slate-300 to-slate-400 dark:from-gray-800 dark:to-gray-900" aria-hidden="true"></div>'
    items={[
      {
        title: "Southport, NC",
        description: "Airplane + Helicopter",
        icon: "tabler:map-pin",
        callToAction: {
          variant: "secondary",
          text: "Explore",
          href: "/southport",
        },
        classes: {
          panel: "bg-southport-tour bg-cover bg-center",
          title:
            "text-slate-700 text-2xl lg:text-3xl font-black m-0 p-0 uppercase dark:text-white",
          description:
            "text-slate-600 tracking-tighter font-bold text-md lg:text-lg uppercase dark:text-white",
          icon: "text-slate-700 dark:text-white",
        },
      },
      {
        title: "St Simons Island, GA",
        description: "Airplane Only",
        icon: "tabler:map-pin",
        callToAction: {
          variant: "secondary",
          text: "Explore",
          href: "/st-simons-island",
        },
        classes: {
          panel: "bg-simons-tour bg-cover bg-center",
          title:
            "text-slate-700 text-2xl lg:text-3xl font-black m-0 p-0 uppercase dark:text-white",
          description:
            "text-slate-600 tracking-tighter font-bold text-lg lg:text-xl uppercase dark:text-white",
          icon: "text-slate-700",
        },
      },
    ]}
  />
</Layout>
