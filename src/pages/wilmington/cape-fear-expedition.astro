---
import Layout from "~/layouts/PageLayout.astro";
import { Icon } from "astro-icon/components";
import Note from "~/components/widgets/Note.astro";
import Image from "~/components/common/Image.astro";
import Hero3 from "../../components/widgets/Hero3.astro";
import WilmingtonTours from "../../components/tours/WilmingtonTours.astro";

const metadata = {
  title: "Cape Fear Expedition Tour | High Tide Aviation",
  description:
    "Experience the Cape Fear Expedition Tour with High Tide Aviation. Fly over Wilmington, NC, and explore the stunning coastline and historic landmarks.",
  keywords:
    "Cape Fear Expedition, Wilmington tours, High Tide Aviation, airplane tours, Bald Head Island, Masonboro Island, scenic flights",
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero3
    reversed={true}
    actions={[
      {
        variant: "custom",
        text: "Book Now",
        href: "https://www.flightcircle.com/shop/5c9443ea346a/4000022554",
        target: "_blank",
      },
    ]}
    price={250}
    openHours={[
      {
        weekday: "Monday - Thursday",
        time: "10:00 AM - 5:00 PM",
      },
      {
        weekday: "Friday - Saturday",
        time: "10:00 AM - 6:00 PM",
      },
      {
        weekday: "Sunday",
        time: "Closed",
      },
    ]}
    image={{
      src: "~/assets/images/cape-fear-expedition-high-tide-tours.png",
      alt: "Cape Fear Expedition Tour",
    }}
  >
    <Fragment slot="title">
      Wilmington, NC
      <br />
      <span
        class="text-sky-400 text-5xl lg:text-6xl dark:text-sky-600 highlight"
        >Cape Fear Expedition</span
      >
    </Fragment>
    <Fragment slot="airport">
      <span class="text-sky-900 font-bold text-xl dark:text-sky-700 highlight"
        >Departs from ILM Modern Aviation</span
      ><br />
      <span class="text-gray-700 text-base dark:text-gray-100 highlight"
        >1817 Aviation Drive, Wilmington, NC 28405</span
      >
    </Fragment>

    <Fragment slot="subtitle">
      <div class="dark:text-white text-primary rounded px-2 py-5">
        Please note our Wilmington tours are only available via airplane.
      </div>
    </Fragment>
  </Hero3>

  <!-- Note Widget ******************* -->

  <Note />

  <section id="tour-info" class="w-full">
    <div
      class="overflow-hidden bg-gradient-to-t from-slate-300 to-gray-300 dark:from-slate-700 dark:to-gray-700 py-4 sm:py-16"
    >
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div
          class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-2"
        >
          <div class="flex align-middle items-center">
            <div
              class="lg:max-w-lg flex justify-center flex-wrap text-white dark:text-gray-500"
            >
              <h2
                class="text-2xl text-center text-gray-700 dark:text-gray-300 font-semibold leading-7 w-full"
              >
                Airplane Only
              </h2>
              <p
                class="mt-2 text-center lg:text-7xl font-bold tracking-tight text-slate-900 dark:text-slate-500 text-4xl w-full"
              >
                Cape Fear Expedition
              </p>
              <p
                class="mt-6 text-center text-lg leading-8 text-gray-800 dark:text-gray-200 w-full"
              >
                For a REAL adventure, journey to Bald Head Island for the BEST
                photo ops! See everything on the Masonboro Excursion, AND
                Brunswick Town, Southport, Fort Fisher, Carolina Beach, Gen.
                Beauregard shipwreck and 2 lighthouses. 35 miles of beaches and
                of course, Cape Fear itself!
              </p>
              <div
                class="flex flex-col justify-center items-center align-middle"
              >
                <h3
                  class="mt-7 uppercase italic text-3xl text-slate-800 dark:text-slate-400 font-black"
                >
                  Included
                </h3>
                <p class="mt-0 text-lg text-slate-500 font-semibold">
                  Notable tour sights
                </p>
                <ul class="mt-4 space-y-1">
                  <li
                    class="flex justify-start align-middle items-center text-lg text-gray-800 dark:text-gray-200"
                  >
                    <Icon class="w-5 h-5" name="tabler:building-community" />
                    <span class="ml-2 font-medium">Downtown Wilmington</span>
                  </li>
                  <li
                    class="flex justify-start align-middle items-center text-lg text-gray-800 dark:text-gray-200"
                  >
                    <Icon class="w-5 h-5" name="tabler:beach" />
                    <span class="ml-2 font-medium">Wrightsville Beach</span>
                  </li>
                  <li
                    class="flex justify-start align-middle items-center text-lg text-gray-800 dark:text-gray-200"
                  >
                    <Icon class="w-5 h-5" name="tabler:ship" />
                    <span class="ml-2 font-medium"
                      >US Coast Guard Station Wilmington</span
                    >
                  </li>
                  <li
                    class="flex justify-start align-middle items-center text-lg text-gray-800 dark:text-gray-200"
                  >
                    <Icon class="w-5 h-5" name="tabler:anchor" />
                    <span class="ml-2 font-medium">Crystal Pier</span>
                  </li>
                  <li
                    class="flex justify-start align-middle items-center text-lg text-gray-800 dark:text-gray-200"
                  >
                    <Icon class="w-5 h-5" name="tabler:anchor" />
                    <span class="ml-2 font-medium">Johnnie Mercers Pier</span>
                  </li>
                  <li
                    class="flex justify-start align-middle items-center text-lg text-gray-800 dark:text-gray-200"
                  >
                    <Icon class="w-5 h-5" name="tabler:plant-2" />
                    <span class="ml-2 font-medium">Orton Plantation</span>
                  </li>
                  <li
                    class="flex justify-start align-middle items-center text-lg text-gray-800 dark:text-gray-200"
                  >
                    <Icon class="w-5 h-5" name="tabler:ripple" />
                    <span class="ml-2 font-medium">Intracoastal Waterway</span>
                  </li>
                  <li
                    class="flex justify-start align-middle items-center text-lg text-gray-800 dark:text-gray-200"
                  >
                    <Icon class="w-5 h-5" name="tabler:beach" />
                    <span class="ml-2 font-medium">Masonboro Island</span>
                  </li>
                  <li
                    class="flex justify-start align-middle items-center text-lg text-gray-800 dark:text-gray-200"
                  >
                    <Icon class="w-5 h-5" name="tabler:anchor" />
                    <span class="ml-2 font-medium">Southport</span>
                  </li>
                  <li
                    class="flex justify-start align-middle items-center text-lg text-gray-800 dark:text-gray-200"
                  >
                    <Icon class="w-5 h-5" name="tabler:fish" />
                    <span class="ml-2 font-medium">Fort Fisher</span>
                  </li>
                  <li
                    class="flex justify-start align-middle items-center text-lg text-gray-800 dark:text-gray-200"
                  >
                    <Icon class="w-5 h-5" name="tabler:beach" />
                    <span class="ml-2 font-medium">Carolina Beach</span>
                  </li>
                  <li
                    class="flex justify-start align-middle items-center text-lg text-gray-800 dark:text-gray-200"
                  >
                    <Icon class="w-5 h-5" name="tabler:ship" />
                    <span class="ml-2 font-medium">Beauregard Shipwreck</span>
                  </li>
                  <li
                    class="flex justify-start align-middle items-center text-lg text-gray-800 dark:text-gray-200"
                  >
                    <Icon class="w-5 h-5" name="tabler:building-lighthouse" />
                    <span class="ml-2 font-medium">Oak Island Lighthouse</span>
                  </li>
                  <li
                    class="flex justify-start align-middle items-center text-lg text-gray-800 dark:text-gray-200"
                  >
                    <Icon class="w-5 h-5" name="tabler:building-lighthouse" />
                    <span class="ml-2 font-medium"
                      >Baldhead Island Lighthouse</span
                    >
                  </li>
                </ul>
                <div
                  class="mt-8 p-6 flex flex-col justify-center items-center align-middle bg-gray-200 dark:bg-gray-800 rounded-lg"
                >
                  <ul class="space-y-1">
                    <li
                      class="flex justify-start align-middle items-center text-base text-gray-800 dark:text-gray-200"
                    >
                      <Icon class="w-6 h-6" name="tabler:circle-check-filled" />
                      <span class="ml-2 font-medium">65 miles | 55 minutes</span
                      >
                    </li>
                    <li
                      class="flex justify-start align-middle items-center text-base text-gray-800 dark:text-gray-200"
                    >
                      <Icon class="w-6 h-6" name="tabler:circle-check-filled" />
                      <span class="ml-2 font-medium">Narrated by pilot</span>
                    </li>
                    <li
                      class="flex justify-start align-middle items-center text-base text-gray-800 dark:text-gray-200"
                    >
                      <Icon class="w-6 h-6" name="tabler:circle-check-filled" />
                      <span class="ml-2 font-medium">Historic landmarks</span>
                    </li>
                    <li
                      class="flex justify-start align-middle items-center text-base text-gray-800 dark:text-gray-200"
                    >
                      <Icon class="w-6 h-6" name="tabler:circle-check-filled" />
                      <span class="ml-2 font-medium">Wildlife sightings</span>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
          <div
            class="h-full w-full flex flex-col justify-center align-middle items-center"
          >
            <Image
              class="rounded shadow-lg"
              src="~/assets/images/wilmington-tours-map.jpg"
              alt="Map of Wilmington Tours"
            />
            <div
              class="mb-8 flex justify-center bg-gray-100 dark:bg-gray-900 rounded p-6 shadow-lg w-full lg:w-1/2 order-first"
            >
              <ul role="list" class="space-y-3">
                <li>
                  <a
                    class="flex align-middle items-center hover:underline hover:text-[#f3aeb0] text-gray-800 dark:text-gray-200"
                    href="/wilmington/battleship-to-the-beach"
                  >
                    <div class="mr-2 rounded h-5 w-5 bg-[#f3aeb0]"></div>
                    <span>Battleship to the Beach</span>
                  </a>
                </li>
                <li>
                  <a
                    class="flex align-middle items-center hover:underline hover:text-[#3aa9d9] text-gray-800 dark:text-gray-200"
                    href="/wilmington/masonboro-excursion"
                  >
                    <div class="mr-2 rounded h-5 w-5 bg-[#3aa9d9]"></div>
                    <span>Masonboro Excursion</span>
                  </a>
                </li>
                <li>
                  <a
                    class="flex align-middle items-center hover:underline hover:text-[#8c8885] text-gray-800 dark:text-gray-200"
                    href="/wilmington/topsail-trek"
                  >
                    <div class="mr-2 rounded h-5 w-5 bg-[#8c8885]"></div>
                    <span>Topsail Trek</span>
                  </a>
                </li>
                <li>
                  <a
                    class="flex align-middle items-center hover:underline hover:text-[#e8c481] text-gray-800 dark:text-gray-200"
                    href="/wilmington/cape-fear-expedition"
                  >
                    <div class="mr-2 rounded h-5 w-5 bg-[#e8c481]"></div>
                    <span>Cape Fear Expedition</span>
                  </a>
                </li>
                <li>
                  <a
                    class="flex align-middle items-center hover:underline hover:text-[#33b36b] text-gray-800 dark:text-gray-200"
                    href="/wilmington/beach-lover-tour"
                  >
                    <div class="mr-2 rounded h-5 w-5 bg-[#33b36b]"></div>
                    <span>Beach Lover Tour</span>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Location *********** -->
  <section id="location" class="w-full">
    <div
      class="overflow-hidden bg-gradient-to-t from-sky-200 dark:from-slate-800 to-slate-500 py-4 sm:py-16"
    >
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div
          class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-2"
        >
          <div class="flex align-middle items-center">
            <div
              class="lg:max-w-lg flex justify-center flex-wrap text-white dark:text-gray-500"
            >
              <h2
                class="text-3xl text-center text-muted font-semibold leading-7 w-full"
              >
                Come Fly Over
              </h2>
              <p
                class="mt-2 text-center lg:text-7xl font-bold tracking-tight text-primary text-4xl w-full"
              >
                Wilmington, NC
              </p>
              <p
                class="mt-6 text-center text-lg leading-8 text-gray-900 dark:text-gray-300 w-full"
              >
                Our Wilmington tours depart from ILM Modern Aviation, located at
                Wilmington International Airport (ILM) at 1817 Aviation Drive,
                Wilmington, NC 28405. Here you'll find our airplane tours and
                our world-class flight school training local pilots across the
                southeastern coast. <strong>Come visit us today!</strong>
              </p>
              <dl
                class="mt-10 max-w-xl space-y-8 text-base leading-7 text-gray-600 lg:max-w-none"
              >
                <!-- <div class="relative">
              <a href="#" class="btn-red">Meet the Team</a>
            </div> -->
              </dl>
            </div>
          </div>
          <div class="h-full w-full flex justify-center align-middle">
            <iframe
              class="rounded"
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3756.5132550384005!2d-77.9099665!3d34.2703456!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89a98b9213dfa305%3A0xe74b80ead02cfb42!2sHigh%20Tide%20Aviation!5e1!3m2!1sen!2sca!4v1754932328853!5m2!1sen!2sca"
              width="600"
              height="450"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"></iframe>
          </div>
        </div>
      </div>
    </div>
  </section>

  <WilmingtonTours />
</Layout>
