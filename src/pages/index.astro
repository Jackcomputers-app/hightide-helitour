---
import Layout from "~/layouts/PageLayout.astro";
import Image from "~/components/common/Image.astro";
import Hero from "~/components/widgets/Hero.astro";
import Note from "~/components/widgets/Note.astro";
import Features2 from "~/components/widgets/Features2.astro";
import Steps from "~/components/widgets/Steps.astro";
import CallToAction from "~/components/widgets/CallToAction.astro";
import Testimonials from "~/components/widgets/Testimonials.astro";
import Brands from "~/components/widgets/Brands.astro";

const metadata = {
  title: "Airplane and Helicopter Tours | High Tide Aviation",
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: "special",
        text: "Choose Location",
        href: "/#locations",
        target: "_self",
        icon: "tabler:map-pin",
      },
      /* { text: 'Learn more', href: '#features', icon: 'tabler:chevron-down'}, */
    ]}
    image={{
      src: "~/assets/images/high-tide-aviation-team-southport.jpg",
      alt: "Helicopter on the ground ready to take off",
    }}
  >
    <Fragment slot="title"> Let's Fly Above </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features2 Widget ************** -->

  <Features2
    id="locations"
    title="High Tide Tour Locations"
    tagline="Select a Coastline"
    columns={3}
    bg='<div class="absolute inset-0 bg-gradient-to-t from-slate-300 to-slate-400 dark:from-gray-800 dark:to-gray-900" aria-hidden="true"></div>'
    items={[
      {
        title: "Southport, NC",
        description: "Airplane + Helicopter",
        icon: "tabler:map-pin",
        callToAction: {
          variant: "secondary",
          text: "Explore",
          href: "/southport",
        },
        classes: {
          panel: "bg-southport-tour bg-cover bg-center",
          title:
            "text-slate-700 text-2xl lg:text-3xl font-black m-0 p-0 uppercase dark:text-white",
          description:
            "text-slate-600 tracking-tighter font-bold text-md lg:text-lg uppercase dark:text-white",
          icon: "text-slate-700 dark:text-white",
        },
      },
      {
        title: "St Simons Island, GA",
        description: "Airplane Only",
        icon: "tabler:map-pin",
        callToAction: {
          variant: "secondary",
          text: "Explore",
          href: "/st-simons-island",
        },
        classes: {
          panel: "bg-simons-tour bg-cover bg-center",
          title:
            "text-slate-700 text-2xl lg:text-3xl font-black m-0 p-0 uppercase dark:text-white",
          description:
            "text-slate-600 tracking-tighter font-bold text-lg lg:text-xl uppercase dark:text-white",
          icon: "text-slate-700 dark:text-white",
        },
      },
      {
        title: "Beaufort, SC",
        description: "Airplane Only",
        icon: "tabler:map-pin",
        callToAction: {
          variant: "secondary",
          text: "Explore",
          href: "/beaufort",
        },
        classes: {
          panel: "bg-beaufort-tour bg-cover bg-center",
          title:
            "text-slate-700 text-2xl lg:text-3xl font-black m-0 p-0 uppercase dark:text-white",
          description:
            "text-slate-600 tracking-tighter font-bold text-lg lg:text-xl uppercase dark:text-white",
          icon: "text-slate-700 dark:text-white",
        },
      },
    ]}
  />

  <section id="our-tours-southport" class="w-full">
    <div
      class="overflow-hidden bg-gradient-to-t from-sky-100 dark:from-sky-900 to-slate-500 py-4 sm:py-16"
    >
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div
          class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-2"
        >
          <div class="flex align-middle items-center justify-center">
            <div
              class="lg:max-w-lg flex justify-center flex-wrap text-white dark:text-gray-500"
            >
              <h2
                class="text-3xl text-center text-muted font-semibold leading-7 w-full"
              >
                Our Tours In
              </h2>
              <p
                class="mt-2 text-center lg:text-7xl font-bold tracking-tight text-primary text-4xl w-full"
              >
                Southport, NC
              </p>
              <div
                class="mt-8 flex justify-center bg-gray-100 dark:bg-gray-900 rounded p-6 shadow-lg w-full lg:w-1/2"
              >
                <ul role="list" class="space-y-3">
                  <li>
                    <a
                      class="flex align-middle items-center hover:underline hover:text-[#9fc242] text-gray-800 dark:text-gray-200"
                      href="/southport/beach-lover"
                    >
                      <div class="mr-2 rounded h-5 w-5 bg-[#9fc242]"></div>
                      <span>Beach Lover</span>
                    </a>
                  </li>
                  <li>
                    <a
                      class="flex align-middle items-center hover:underline hover:text-[#bfc1c4] text-gray-800 dark:text-gray-200"
                      href="/southport/oak-island"
                    >
                      <div class="mr-2 rounded h-5 w-5 bg-[#bfc1c4]"></div>
                      <span>Oak Island</span>
                    </a>
                  </li>
                  <li>
                    <a
                      class="flex align-middle items-center hover:underline hover:text-[#ffa64b] text-gray-800 dark:text-gray-200"
                      href="/southport/lighthouse-tour"
                    >
                      <div class="mr-2 rounded h-5 w-5 bg-[#ffa64b]"></div>
                      <span>Lighthouse Tour</span>
                    </a>
                  </li>
                  <li>
                    <a
                      class="flex align-middle items-center hover:underline hover:text-[#ffe94a] text-gray-800 dark:text-gray-200"
                      href="/southport/bald-head-island"
                    >
                      <div class="mr-2 rounded h-5 w-5 bg-[#ffe94a]"></div>
                      <span>Bald Head Island</span>
                    </a>
                  </li>
                  <li>
                    <a
                      class="flex align-middle items-center hover:underline hover:text-[#970c5f] text-gray-800 dark:text-gray-200"
                      href="/southport/cape-fear-passport"
                    >
                      <div class="mr-2 rounded h-5 w-5 bg-[#970c5f]"></div>
                      <span>Cape Fear Passport</span>
                    </a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
          <div
            class="h-full w-full flex justify-center align-middle items-center"
          >
            <Image
              class="rounded shadow-lg"
              src="~/assets/images/HTA-map-southport.jpg"
              alt="tour-map-route"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="our-tours-beaufort" class="w-full">
    <div
      class="overflow-hidden bg-gradient-to-t from-sky-100 dark:from-sky-900 to-slate-500 py-4 sm:py-16"
    >
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div
          class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-2"
        >
          <div class="flex align-middle items-center justify-center">
            <div
              class="lg:max-w-lg flex justify-center flex-wrap text-white dark:text-gray-500"
            >
              <h2
                class="text-3xl text-center text-muted font-semibold leading-7 w-full"
              >
                Our Tours In
              </h2>
              <p
                class="mt-2 text-center lg:text-7xl font-bold tracking-tight text-primary text-4xl w-full"
              >
                Beaufort, SC
              </p>
              <div
                class="mt-8 flex justify-center bg-gray-100 dark:bg-gray-900 font-semibold rounded p-6 shadow-lg w-full lg:w-1/2"
              >
                <ul role="list" class="space-y-3">
                  <li>
                    <a
                      class="flex align-middle items-center hover:underline hover:text-[#d7532f] text-gray-800 dark:text-gray-200"
                      href="/beaufort/barrier-island"
                    >
                      <div class="mr-2 rounded h-5 w-5 bg-[#d7532f]"></div>
                      <span>Barrier Island</span>
                    </a>
                  </li>
                  <li>
                    <a
                      class="flex align-middle items-center hover:underline hover:text-[#492847] text-gray-800 dark:text-gray-200"
                      href="/beaufort/hilton-head"
                    >
                      <div class="mr-2 rounded h-5 w-5 bg-[#492847]"></div>
                      <span>Hilton Head Tour</span>
                    </a>
                  </li>
                  <li>
                    <a
                      class="flex align-middle items-center hover:underline hover:text-[#009c4e] text-gray-800 dark:text-gray-200"
                      href="/beaufort/low-country-passport"
                    >
                      <div class="mr-2 rounded h-5 w-5 bg-[#009c4e]"></div>
                      <span>Low Country Passport</span>
                    </a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
          <div
            class="h-full w-full flex justify-center align-middle items-center order-first"
          >
            <Image
              class="rounded shadow-lg"
              src="~/assets/images/beaufort-sc-tour-map-high-tide-aviation-aerial-tours.jpg"
              alt="tour-map-route"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="our-tours-st-simons" class="w-full">
    <div
      class="overflow-hidden bg-gradient-to-t from-sky-100 dark:from-sky-900 to-slate-500 py-4 sm:py-16"
    >
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div
          class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-2"
        >
          <div class="flex align-middle items-center justify-center">
            <div
              class="lg:max-w-lg flex justify-center flex-wrap text-white dark:text-gray-500"
            >
              <h2
                class="text-3xl text-center text-muted font-semibold leading-7 w-full"
              >
                Our Tours In
              </h2>
              <p
                class="mt-2 text-center lg:text-7xl font-bold tracking-tight text-primary text-4xl w-full"
              >
                St Simons Island, GA
              </p>
              <div
                class="mt-8 flex justify-center bg-gray-100 dark:bg-gray-900 font-semibold rounded p-6 shadow-lg w-full lg:w-1/2"
              >
                <ul role="list" class="space-y-3">
                  <li>
                    <a
                      class="flex align-middle items-center hover:underline hover:text-[#242246] text-gray-800 dark:text-gray-200"
                      href="/st-simons-island/lighthouse-tour"
                    >
                      <div class="mr-2 rounded h-5 w-5 bg-[#242246]"></div>
                      <span>Lighthouse Tour</span>
                    </a>
                  </li>
                  <li>
                    <a
                      class="flex align-middle items-center hover:underline hover:text-[#00a94a] text-gray-800 dark:text-gray-200"
                      href="/st-simons-island/jekyll-island"
                    >
                      <div class="mr-2 rounded h-5 w-5 bg-[#00a94a]"></div>
                      <span>Jekyll Island</span>
                    </a>
                  </li>
                  <li>
                    <a
                      class="flex align-middle items-center hover:underline hover:text-[#de5e29] text-gray-800 dark:text-gray-200"
                      href="/st-simons-island/golden-isles-passport"
                    >
                      <div class="mr-2 rounded h-5 w-5 bg-[#de5e29]"></div>
                      <span>Golden Isles Passport</span>
                    </a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
          <div
            class="h-full w-full flex justify-center align-middle items-center"
          >
            <Image
              class="rounded shadow-lg"
              src="~/assets/images/st-simons-island-ga-tour-map-high-tide-aviation-aerial-tours.jpg"
              alt="tour-map-route"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Steps Widget ****************** -->
  <Steps
    title="Ready to Fly?"
    tagline="4 Simple Steps"
    subtitle=`Booking and flying on a High Tide Aviation aerial tour is easier than you think. Book online in just a few easy steps or stop by one of <a href="#locations" class="text-sky-500 hover:underline">our locations</a>.`
    items={[
      {
        title: 'Step 1: <span class="font-medium">Select a location</span>',
        description:
          "Choose which coastline you’d like to fly over, from North Carolina to South Carolina to Georgia.",
        icon: "tabler:map-pin",
        classes: {
          icon: "text-gray-500",
        },
      },
      {
        title: 'Step 2: <span class="font-medium">Pick a tour</em>',
        description: `Each location has between three and six tour options. Read through each route and select the view you’d like most.`,
        icon: "tabler:checklist",
        classes: {
          icon: "text-gray-500",
        },
      },
      {
        title: 'Step 3: <span class="font-medium">Add passengers</span>',
        description:
          "There is no minimum passenger count for airplane tour bookings, but we do require a minimum of two passengers for helicopter tour bookings. Add and subtract passengers via the booking link once at checkout.",
        icon: "tabler:users-plus",
        classes: {
          icon: "text-gray-500",
        },
      },
      {
        title: 'Step 4: <span class="font-medium">Get ready to fly</span>',
        description: `Add your payment method & start the countdown to your flight! Upon checkout, you will receive an email confirmation and your tickets.`,
        icon: "tabler:check",
        classes: {
          icon: "text-gray-500",
        },
      },
    ]}
    image={{
      src: "~/assets/images/IMG_0470.jpg",
      alt: "Helicopter on the ground ready to take off",
    }}
  />

  <!-- Testimonials Widget *********** -->

  <Testimonials
    title="Words from Our Guests"
    bg='<div class="absolute inset-0 bg-gradient-to-t from-slate-300 to-slate-400 dark:from-gray-800 dark:to-gray-900" aria-hidden="true"></div>'
    testimonials={[
      {
        testimonial: `Never been in a helicopter before, but this was one of the best experiences of my life! Our pilot, Paige, was super friendly, explained everything as it was happening, and gave me an AMAZING experience by letting me take part in controlling some of the flight - definitely recommend the Discovery add-on! I'd love to do this again if I visit the area in the future, and will be talking it up to family and friends!`,
        name: "Esther Zimmerman",
        job: "Cape Fear Discovery Tour",
      },
      {
        testimonial: `My Granddaughter and myself had an Awesome experience. The female pilot we had was great and allowed my Granddaughter to fly the Plane , I believe this will be an experience.That she will never forget. Thanks for making it a special  moment!!!`,
        name: "Steve Gamble",
        job: "St Simons Island Tour",
      },
      {
        testimonial: `A perfect way to celebrate a special occasion! We have done a helicopter tour and most recently a discovery flight (mini-flight lesson). All the staff have been excellent, made us feel very safe- lots of “checks” and careful attention to detail. There’s nothing like seeing our favorite island from a helicopter view! Spectacular!`,
        name: "Casey Berkshire",
        job: "Southport Discovery Flight",
      },
    ]}
    callToAction={{
      variant: "tertiary",
      target: "_self",
      text: "Read more testimonials",
      href: "/about/testimonials",
      icon: "tabler:chevron-right",
    }}
  />

  <Brands
    title="What People are Saying"
    subtitle="See what matters most to our customers. Explore reviews to find out what people love about our tours."
    icons={[]}
    imagesLink={[
      {
        src: "~/assets/images/Tripadvisor-Logo.webp",
        alt: "Tripadvisor",
        href: "https://www.tripadvisor.com/Attraction_Review-g49403-d7726762-Reviews-High_Tide_Helicopters-Oak_Island_North_Carolina.html",
      },
      {
        src: "~/assets/images/Google-logo.webp",
        alt: "Google",
        href: "https://maps.app.goo.gl/kCbEjLT6HXo9AykC6",
      },
      {
        src: "~/assets/images/Facebook-logo.webp",
        alt: "Facebook",
        href: "https://www.facebook.com/flyhightide/reviews",
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: "primary",
        text: "View Gift Cards",
        target: "_self",
        href: "/gift-cards",
      },
    ]}
    title=" Gift Cards Available"
    subtitle="Give the gift of a flight tour with a High Tide gift card."
    bg='<div class="absolute inset-0 bg-gift-card bg-cover bg-center" aria-hidden="true"></div>'
  />
</Layout>
